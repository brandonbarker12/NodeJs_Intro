<html>
    <head>
        <title> To-do List</title>
        <link href="https://fonts.googleapis.com/css?family=Lato:100" rel="stylesheet">
        <link href="css/styles.css" rel="stylesheet">
    </head>
    <body>      
        <div class="container">
            <h1> We have a To-Do List </h1>
            <form action ="/addtask" method="POST">
                <input type="text" name="newtask" placeholder="Add new task">
                <button> Add to Tasks </button>
                <h2> Tasks: </h2>
                <% for( var i=0; i < tasks.length; i++){ %>
                    <li><input type="checkbox" name="check" value="<%= tasks[i]._id %>" /><%= tasks[i].item %></li>
                <% } %>

                <button formaction="/removetask" type="submit"> Remove Task </button>
            </form>

            <form action ="/deleteTodo" method="POST">
                <h3> Completed tasks: </h3>
                    <% for(var i = 0; i < completed.length; i++){ %>
                        <li><input type="checkbox" name="delete" value="<%= completed[i]._id %>" /><%= completed[i].item %></li>
                    <% } %>
                <button formaction="/deleteTodo" type="submit"> Delete </button>
            </form>                
        </div>

    </body>
</html>